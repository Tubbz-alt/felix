@title Stand Alone Tuple RW Pointer Integer (Constant) Projection Array domain
@felix
typedef t_t = int * int * int ;
typedef d_t = &t_t;
var x : t_t = 1,2,3;
var px : d_t = &x;
var p0 = proj 0 of d_t;
var p1 = proj 1 of d_t;
var p2 = proj 2 of d_t;
println$ *(px . p0);
println$ *(px . p1);
println$ *(px . p2);
px . p0 <- 4;
px . p1 <- 5;
px . p2 <- 6;
println$ x;
@expect
1
2
3
(4, 5, 6)
@


